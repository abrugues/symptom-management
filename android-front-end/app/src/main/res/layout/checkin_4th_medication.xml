<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/questFourTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:text="@string/question_four" />
    
    <RadioGroup
	    android:id="@+id/questFourRadioGroup"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
    	android:layout_centerHorizontal="true"
    	android:layout_below="@id/questFourTxtView"
    	android:orientation="horizontal"
    	android:layout_marginTop="8dp" >
    	
	    <RadioButton 
	        android:id="@+id/yesQuestFourRadioBtn"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="30sp" 
        	android:text="@string/yes"
        	android:onClick="onQuestionFourYesClicked" />
	    
	    <RadioButton 
	        android:id="@+id/noQuestFourRadioBtn"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="30sp" 
        	android:text="@string/no"
        	android:onClick="onQuestionFourNoClicked"/>
	    
	</RadioGroup>
	
    <TextView
        android:id="@+id/drugDateTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questFourRadioGroup"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="24sp"
        android:text="@string/date" />
    
</RelativeLayout>
