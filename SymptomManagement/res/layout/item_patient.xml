<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
	<TextView
	    android:id="@+id/patientNameTxtView"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="24sp"
    	android:padding="8dp" />

	<ImageView
	    android:id="@+id/eatAlertImgView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="8dp"
	    android:visibility="invisible"
	    android:contentDescription="@string/i_cant_eat_during_12_hours"
	    android:src="@drawable/restaurant" />
	
	<ImageView
	    android:id="@+id/pain12AlertImgView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@id/eatAlertImgView"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="8dp"
	    android:visibility="invisible"
	    android:contentDescription="@string/severe_pain_the_last_12_hours"
	    android:src="@drawable/sad" />
	
	<ImageView
	    android:id="@+id/pain16AlertImgView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@id/pain12AlertImgView"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="8dp"
	    android:visibility="invisible"
	    android:contentDescription="@string/at_least_moderate_pain_the_last_16_hours"
	    android:src="@drawable/crying" />

</RelativeLayout>